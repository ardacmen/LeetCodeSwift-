class Solution {
    func isPowerOfThree(_ n: Int) -> Bool {
         var x = n
        if x <= 0 {
            
            return false
            
        }else{
            
            
           
    while x % 3 == 0 {
        x = x /  3
    }
      }
    
   
    if x == 1{
        return true
    }else{
        return false
    }
            
        }
        
    }
